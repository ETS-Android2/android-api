<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_result_icon"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <ImageButton
        android:id="@+id/yelp_logo"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/five_star_red"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/yelp_trademark_rgb_outline" />

    <TextView
        android:id="@+id/search_result_title"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_toLeftOf="@id/yelp_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/font_size_title" />

    <ImageButton
        android:id="@+id/yelp_rating"
        android:layout_below="@id/search_result_title"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_toLeftOf="@id/yelp_logo"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/stars_small_5" />

    <TextView
        android:id="@+id/yelp_reviews"
        android:layout_below="@id/yelp_rating"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_toLeftOf="@id/yelp_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/yelp_review_text" />
</RelativeLayout>