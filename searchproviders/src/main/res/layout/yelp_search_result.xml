<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_result"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:padding="@dimen/search_results_more_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_result_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <TextView
        android:id="@+id/search_result_title"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_title"
        android:textColor="@color/searchbox_autcomplete_list_header_font_matched"/>

    <TextView
        android:id="@+id/search_result_description"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_below="@id/search_result_title"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_subtitle"
        android:textColor="@color/searchbox_autcomplete_list_header_font_unmatched"/>

    <ImageButton
        android:id="@+id/yelp_rating"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginRight="@dimen/search_results_more_margin"
        android:layout_toRightOf="@id/search_result_icon"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:padding="0dp"
        app:srcCompat="@drawable/stars_small_5" />

    <TextView
        android:id="@+id/yelp_reviews"
        android:layout_toRightOf="@id/yelp_rating"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginRight="@dimen/search_results_more_margin"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_subtitle"
        android:text="@string/yelp_review_text" />

    <ImageButton
        android:id="@+id/yelp_logo"
        android:layout_width="24dp"
        android:layout_height="14dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/yelp_reviews"
        android:background="@drawable/roundbutton"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/yelp_trademark_rgb_outline" />
</RelativeLayout>