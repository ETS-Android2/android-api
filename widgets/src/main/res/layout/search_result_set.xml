<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchbox_result_set"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/search_padding"
    android:layout_weight="1.0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/searchbox_set_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/searchbox_set_search_in_progress_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/searchbox_background"
            android:indeterminate="true"
            android:visibility="gone" />

        <ListView
            android:id="@+id/searchbox_set_result_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchbox_set_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_results_footer_height"
        android:background="@color/searchbox_background"
        android:minHeight="@dimen/search_results_footer_height"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/searchbox_set_expand_controls"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_results_footer_height"
            android:orientation="horizontal"
            android:padding="@dimen/search_results_more_margin"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/searchbox_set_expand_button"
                android:layout_width="@dimen/search_results_more_icon_size"
                android:layout_height="@dimen/search_results_more_icon_size"
                android:visibility="visible"
                app:srcCompat="@drawable/moreresults_butn" />

            <TextView
                android:id="@+id/searchbox_set_expand_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_results_text_area_height"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchbox_set_pagination_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/searchbox_set_pagination_prev"
                android:layout_width="@dimen/search_results_page_icon_width"
                android:layout_height="@dimen/search_results_page_icon_height"
                app:srcCompat="@drawable/expander" />

            <TextView
                android:id="@+id/searchbox_set_pagination_results_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/search_results_text_area_height"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/searchbox_set_pagination_next"
                android:layout_width="@dimen/search_results_page_icon_width"
                android:layout_height="@dimen/search_results_page_icon_height"
                android:rotation="180"
                app:srcCompat="@drawable/expander" />

            <TextView
                android:id="@+id/searchbox_set_expanded_results_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/search_results_text_area_height"
                android:gravity="end"
                android:textAlignment="textEnd" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
