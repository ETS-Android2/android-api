<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_box_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="8dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:id="@+id/searchbox_search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_query_height"
        android:orientation="horizontal"
        android:background="@color/search_widget_primary"
        android:elevation="8dp"
        android:visibility="visible">
        <ImageButton
            android:id="@+id/searchbox_search_menu"
            android:layout_width="@dimen/search_query_button_size"
            android:layout_height="@dimen/search_query_button_size"
            android:layout_marginLeft="@dimen/search_query_margin"
            android:layout_marginTop="@dimen/search_query_margin"
            android:layout_marginBottom="@dimen/search_query_margin"
            android:layout_alignParentLeft="true"
            android:src="@drawable/menu_btn"
            tools:text="Options" />

        <SearchView
            android:id="@+id/searchbox_search_searchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/search_query_margin"
            android:layout_toRightOf="@id/searchbox_search_menu"
            android:background="@drawable/searchbox_border"
            android:baselineAligned="false"
            android:iconifiedByDefault="false"
            android:queryHint="@string/searchbox_query_hint" />

        <RelativeLayout
            android:id="@+id/searchbox_search_spinner_container"
            android:layout_width="@dimen/search_spinner_icon_size"
            android:layout_height="@dimen/search_spinner_icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/search_spinner_icon_margin">

            <RelativeLayout
                android:layout_width="@dimen/search_spinner_icon_size"
                android:layout_height="@dimen/search_spinner_icon_size"
                android:background="@color/search_widget_searchbox"/>

            <ProgressBar
                android:layout_width="@dimen/search_spinner_icon_size"
                android:layout_height="@dimen/search_spinner_icon_size"
                android:indeterminate="true"
                android:indeterminateTint="@color/search_widget_link"
                android:indeterminateTintMode="multiply"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchbox_search_results_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchbox_search_container"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/search_widget_primary"
        android:elevation="8dp">

        <ListView
            android:id="@+id/searchbox_search_results_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:choiceMode="singleChoice"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="@dimen/search_menu_scrollbar_width"
            android:scrollbarThumbVertical="@color/search_widget_scrollbar"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="32dp"
            android:drawSelectorOnTop="false"
            android:fadeScrollbars="false"/>

        <include layout="@layout/search_separator_small"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/searchbox_autocomplete_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchbox_search_container"
        android:orientation="vertical"
        android:background="@color/search_widget_primary"
        android:elevation="8dp">

        <include layout="@layout/search_separator_small"/>

        <ListView
            android:id="@+id/searchbox_autocomplete_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/search_widget_divider_dark"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:drawSelectorOnTop="false"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/searchbox_no_results_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchbox_search_container"
        android:background="@color/search_widget_secondary"
        android:orientation="vertical"
        android:elevation="8dp">

        <include layout="@layout/search_separator_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_widget_primary"
            android:padding="@dimen/search_padding">

            <ImageView
                android:layout_width="@dimen/search_results_no_results_icon_size"
                android:layout_height="@dimen/search_results_no_results_icon_size"
                android:src="@drawable/no_results"
                android:layout_margin="@dimen/search_padding"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:padding="@dimen/search_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/searchbox_no_results"
                android:textColor="@color/search_widget_warning"
                android:layout_gravity="center"
                android:textSize="12sp"/>
        </LinearLayout>



    </LinearLayout>

    <ViewStub
        android:id="@+id/searchbox_menu_container_stub"
        android:inflatedId="@+id/searchbox_menu_container"
        android:layout="@layout/searchbox_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"/>

</RelativeLayout>