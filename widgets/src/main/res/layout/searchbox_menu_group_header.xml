<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/search_menu_drop_down_group_margin"
    android:background="@color/searchbox_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/searchbox_menu_group_icon"
        android:layout_width="@dimen/search_menu_drop_down_group_icon_height"
        android:layout_height="@dimen/search_menu_drop_down_group_icon_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/expander" />

    <TextView
        android:id="@+id/searchbox_menu_item_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_menu_drop_down_group_text_area_height"
        android:layout_margin="@dimen/search_menu_drop_down_group_margin"
        android:layout_toLeftOf="@id/searchbox_menu_group_icon"
        android:textSize="@dimen/font_size_menu_option_title" />

</RelativeLayout>