<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_result"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/searchbox_background"
    android:padding="8dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_result_icon"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <TextView
        android:id="@+id/search_result_title"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_title"
        android:textColor="@color/searchbox_autcomplete_list_header_font_matched"/>

    <TextView
        android:id="@+id/search_result_description"
        android:layout_toRightOf="@id/search_result_icon"
        android:layout_below="@id/search_result_title"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_subtitle"
        android:textColor="@color/searchbox_autcomplete_list_header_font_unmatched"/>

</RelativeLayout>