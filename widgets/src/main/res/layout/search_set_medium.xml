<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <ListView
        android:id="@+id/search_set_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.82"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/expand_controls"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/search_expand_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/expand_search_results"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pagination_controls"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/search_pagination_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pagination_prev" />

        <TextView
            android:id="@+id/search_pagination_results_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_result_count"
            android:textAlignment="center" />

        <Button
            android:id="@+id/search_pagination_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pagination_next" />
    </LinearLayout>

</LinearLayout>
