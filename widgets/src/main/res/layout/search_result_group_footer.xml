<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_results_footer_height"
    android:orientation="horizontal"
    android:visibility="visible"
    android:gravity="center"
    android:padding="@dimen/search_results_more_margin"
    android:background="@color/search_widget_secondary">

    <ImageView
        android:id="@+id/searchbox_set_expand_button"
        android:layout_width="@dimen/search_results_more_icon_size"
        android:layout_height="@dimen/search_results_more_icon_size"
        android:visibility="visible"
        app:srcCompat="@drawable/moreresults_butn" />

    <TextView
        android:id="@+id/searchbox_set_expand_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_results_text_area_height"
        android:textAlignment="textStart"
        android:textColor="@color/search_widget_link"
        android:gravity="center_vertical|start"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>