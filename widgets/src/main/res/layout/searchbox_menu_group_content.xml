<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/search_widget_result_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/search_padding"
        android:layout_marginRight="@dimen/search_padding"
        android:padding="@dimen/search_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/searchbox_menu_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/searchbox_menu_button_icon_description"
            android:src="@drawable/search_result_placeholder__blue"
            />

        <TextView
            android:id="@+id/searchbox_menu_item_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_menu_drop_down_item_text_area_height"
            android:textSize="@dimen/font_size_menu_option_title"
            android:textColor="@color/search_widget_text_secondary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/search_padding"
            android:layout_toRightOf="@+id/searchbox_menu_item_icon"
            android:layout_toEndOf="@+id/searchbox_menu_item_icon"/>

    </RelativeLayout>

    <View
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:scaleY="-1"
        android:background="@drawable/gradientshadow"/>

    <View
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradientshadow"/>

    <View
        android:id="@+id/option_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_menu_drop_down_item_divider_height"
        android:layout_marginLeft="@dimen/search_menu_drop_down_group_margin"
        android:layout_marginRight="@dimen/search_menu_drop_down_group_margin"
        android:layout_alignParentBottom="true"
        android:background="@color/search_widget_divider_light"/>

</RelativeLayout>